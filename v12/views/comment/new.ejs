<% include ../partials/header %>

<div class="container">
    <h1 class="text-center mb-3 mt-5">Add New Comment to <strong><%= campground.name %></strong></h1>
    <div id="formInput">
        <form action="/campgrounds/<%= campground._id %>/comments" method="POST">
            <div class="form-group">
                <input class="form-control" type="text" name="comment[text]" placeholder="Type comment...">
            </div>
            <button class="btn btn-primary btn-md btn-block" type="submit">Submit</button>
        </form>
        <a href="/campgrounds">Go Back</a>
    </div>
</div>

<% include ../partials/footer %>