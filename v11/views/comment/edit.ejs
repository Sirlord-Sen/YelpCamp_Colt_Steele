<% include ../partials/header %>

<div class="container">
    <h1 class="text-center mb-3 mt-5">Edit Comment</h1>
    <div id="formInput">
        <form action="/campgrounds/<%= campground_id %>/comments/<%= comment._id %>?_method=PUT" method="POST">
            <div class="form-group">
                <input class="form-control" type="text" name="comment[text]" value="<%= comment.text %>">
            </div>
            <button class="btn btn-primary btn-md btn-block" type="submit">Update</button>
        </form>
    </div>
</div>

